	<div class="page-header">
		<h1>GAME REVIEWS</h1>
	</div>
	<div class="container" id="reviewBlock">
	<!-- start of my loop -->
	<% @games.each do |game| %>
	
		<div class="row">
			<div class="col-md-6">
				<h3>
					<a href="/<%= game[:id]%>"><%= game[:title]%></a>

				</h3>
			</div>
			<div class="col-md-6">

				<p><%= game[:review]%></p>
			</div>
		</div>
		

	<% end %>
	</div>
