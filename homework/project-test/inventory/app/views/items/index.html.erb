<%= javascript_include_tag "items" %>
<p id="notice"><%= notice %></p>

<h1>Items</h1>

 <form id="myForm">
 <% @academies.each do |academy| %>
    <input type="radio" name="radioName" value="<%=academy.name%>" /><%= academy.name%> <br />
<% end %>
</form>
<input type="radio" name="all" value="allitems" id="all">All items <br>

<table id="myTable">
  <thead>
    <tr>
      <th>Description</th>
      <th>Serial</th>
      <th>Academy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="itembody">
    <% @items.each do |item| %>
      <tr>
        <td id="desc"><%= item.description %></td>
        <td id="serial"><%= item.serial %></td>
        <td id="a"><%= item.academy.name %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
