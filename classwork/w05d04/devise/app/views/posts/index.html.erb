<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr class="table-active">
      <th>Author</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="table-success"><%=post.user.name%></td>
        <td class="table-warning"><%= post.title %></td>
        <td class="table-"><%= link_to 'Show', post %></td>
        <% if current_user.name == post.user.name %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td class="table-danger"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


